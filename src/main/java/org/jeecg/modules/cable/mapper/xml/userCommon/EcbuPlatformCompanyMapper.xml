        <include refid="Base_Column_List"/>
        from ecbu_platform_company
        <where>
            <if test="ecCompanyId != null">
                AND ec_company_id = #{ecCompanyId,jdbcType=INTEGER}
            </if>
        </where>
        order by sort_id desc
        limit 1
